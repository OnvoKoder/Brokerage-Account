<Application x:Class="Broker.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Broker"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="MainStyle">
            <Setter Property="ItemsControl.Background" Value="#D2A0A0"/>
            <Setter Property="ItemsControl.FontFamily" Value="Comic Sans MS"/>
            <Setter Property="ItemsControl.FontSize" Value="30"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="ItemsControl.FontFamily" Value="Comic Sans MS"/>
            <Setter Property="ItemsControl.FontSize" Value="20"/>
            <Setter Property="ItemsControl.Margin" Value="0 25 0 0"/>
        </Style>
        <Style TargetType="Border">
            <Setter Property="CornerRadius" Value="30"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="ItemsControl.FontFamily" Value="Comic Sans MS"/>
            <Setter Property="ItemsControl.FontSize" Value="20"/>
        </Style>
        <Style TargetType="Hyperlink">
            <Setter Property="ItemsControl.FontFamily" Value="Comic Sans MS"/>
            <Setter Property="ItemsControl.FontSize" Value="20"/>
        </Style>
    </Application.Resources>
</Application>
